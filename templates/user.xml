<templateSet group="user">
  <template name="--" value="// --------------------------------------------------------------------------" description="Comment divider" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="OTHER" value="true" />
    </context>
  </template>
  <template name="p.cls" value="class $CLASS$ {&#10; $TABLE$&#10; &#10; $v$&#10;}" toReformat="false" toShortenFQNames="true">
    <variable name="CLASS" expression="fileNameWithoutExtension()" defaultValue="" alwaysStopAt="true" />
    <variable name="TABLE" expression="capitalize(String)" defaultValue="CLASS" alwaysStopAt="true" />
    <variable name="v" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP" value="true" />
      <option name="PHP Comment" value="false" />
      <option name="PHP String Literal" value="false" />
      <option name="PHP Class Member" value="false" />
    </context>
  </template>
</templateSet>